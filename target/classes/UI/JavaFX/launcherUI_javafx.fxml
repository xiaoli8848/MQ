<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.input.*?>
<?import org.fxmisc.richtext.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MQ.UI.JavaFX.launcherUI_Controller">
    <children>
        <Pane fx:id="infoPane" layoutX="730.0" layoutY="61.0" prefHeight="720.0" prefWidth="255.0" style="-fx-background-color:rgb(230,230,230)">
            <children>
                <Label fx:id="playerNameLabel" alignment="CENTER" layoutX="14.0" layoutY="265.0" prefHeight="24.0" prefWidth="80.0" text="玩家名：" textAlignment="CENTER">
                    <font>
                        <Font name="DengXian Regular" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="playerName" layoutX="91.0" layoutY="256.0" prefHeight="42.0" prefWidth="145.0">
                    <font>
                        <Font size="19.0" />
                    </font>
                </TextField>
                <Button fx:id="launchButton" layoutX="143.0" layoutY="651.0" mnemonicParsing="false" onAction="#launchGame" prefHeight="48.0" prefWidth="103.0" stylesheets="@button.css" text="启动" textAlignment="CENTER">
                    <font>
                        <Font name="DengXian Regular" size="19.0" />
                    </font>
                </Button>
            <Label fx:id="rootDirLabel" layoutX="14.0" layoutY="14.0" text="根路径：">
               <font>
                  <Font name="DengXian Regular" size="20.0" />
               </font>
            </Label>
            <Button fx:id="rootDirChooseButton" layoutX="113.0" layoutY="9.0" mnemonicParsing="false" onAction="#chooseRootDir" prefHeight="40.0" prefWidth="100.0" text="选择">
               <font>
                  <Font name="DengXian Regular" size="19.0" />
               </font>
            </Button>
            <AnchorPane layoutX="10.0" layoutY="79.0" prefHeight="100.0" prefWidth="235.0" style="-fx-background-color: #7b8b83; -fx-background-radius: 20px;">
               <children>
                  <ImageView fx:id="versionImage" fitHeight="60.0" fitWidth="60.0" layoutX="15.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@imgs/iron_sword.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="gameVersion" layoutX="85.0" layoutY="14.0" text="1.7.10">
                     <font>
                        <Font name="DengXian Bold" size="24.0" />
                     </font>
                  </Label>
                  <Circle fx:id="unfoldButton" fill="#737b83" layoutX="209.0" layoutY="46.0" onMouseClicked="#changeGameVersion" radius="12.0" stroke="TRANSPARENT" strokeType="INSIDE" />
                  <Hyperlink fx:id="gamePathLink" layoutX="75.0" layoutY="58.0" text="D:\.minecraft" textFill="#725c5c">
                     <font>
                        <Font name="Arial Rounded MT Bold" size="15.0" />
                     </font>
                  </Hyperlink>
               </children>
            </AnchorPane>
            </children>
        </Pane>
        <WebView fx:id="browser" layoutX="15.0" layoutY="61.0" prefHeight="345.0" prefWidth="700.0" />
      <TextArea fx:id="logText" layoutX="15.0" layoutY="435.0" prefHeight="350.0" prefWidth="700.0" />
      <MenuBar prefHeight="51.0" prefWidth="1000.0">
        <menus>
          <Menu mnemonicParsing="false" text="文件">
            <items>
                  <MenuItem fx:id="file_Input" mnemonicParsing="false" onAction="#inputGame" text="导入">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
              <MenuItem fx:id="file_Close" mnemonicParsing="false" onAction="#close" text="关闭" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="帮助">
            <items>
                  <MenuItem fx:id="help_WebSite" mnemonicParsing="false" onAction="#gotoWebSite" text="访问官网" />
              <MenuItem fx:id="help_About" mnemonicParsing="false" onAction="#showAbout" text="关于" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
    </children>
</AnchorPane>
