<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.RangeSlider?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="850.0" maxWidth="1000.0" minHeight="850.0" minWidth="1000.0"
            prefHeight="850.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(246,246,246,1) 47%,rgba(237,237,237,1) 100%);"
            xmlns="http://javafx.com/javafx/8" fx:controller="UI.JavaFX.launcherUI_Controller">
    <children>
        <AnchorPane fx:id="launchTab" layoutX="299.0" layoutY="124.0" minHeight="0.0" minWidth="0.0" prefHeight="363.0"
                    prefWidth="680.0">
            <children>
                <AnchorPane layoutX="214.0" layoutY="24.0" minHeight="0.0" minWidth="0.0" prefHeight="170.0"
                            prefWidth="191.0" styleClass="Pane_white" stylesheets="@UI_JavaFX.css">
                    <children>
                        <TextField fx:id="user_name" layoutX="63.0" layoutY="67.0" prefHeight="33.0" prefWidth="115.0"
                                   promptText="User name">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </TextField>
                        <PasswordField fx:id="password" layoutX="63.0" layoutY="124.0" prefHeight="33.0"
                                       prefWidth="115.0" promptText="Password">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </PasswordField>
                        <Label layoutX="5.0" layoutY="69.0" text="用户名">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label layoutX="14.0" layoutY="126.0" text="密码">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <CheckBox fx:id="isOnlineLaunch" layoutX="23.0" layoutY="11.0" mnemonicParsing="false"
                                  onAction="#isOnline" text="在线登录">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </CheckBox>
                    </children>
                </AnchorPane>
                <Pane layoutX="36.0" layoutY="217.0" prefHeight="129.0" prefWidth="614.0" styleClass="Pane_white"
                      stylesheets="@UI_JavaFX.css">
                    <children>
                        <RangeSlider fx:id="memory" blockIncrement="256.0" highValue="1024.0" highValueChanging="true"
                                     layoutX="98.0" layoutY="60.0" lowValue="0.0" lowValueChanging="true"
                                     majorTickUnit="1024.0" max="4096.0" minorTickCount="512"
                                     onMouseReleased="#updateMemory" prefHeight="63.0" prefWidth="412.0"
                                     showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="slider"
                                     stylesheets="@bootstrap3.css"/>
                        <CheckBox fx:id="isAutoMem" layoutX="233.0" layoutY="14.0" mnemonicParsing="false"
                                  onAction="#isMem" text="自动分配内存">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </CheckBox>
                        <TextField fx:id="minMemory" layoutX="14.0" layoutY="77.0" onAction="#uploadMemory"
                                   prefWidth="72.0">
                            <font>
                                <Font size="10.0"/>
                            </font>
                        </TextField>
                        <TextField fx:id="maxMemory" layoutX="528.0" layoutY="77.0" onAction="#uploadMemory"
                                   prefWidth="72.0">
                            <font>
                                <Font size="10.0"/>
                            </font>
                        </TextField>
                    </children>
                </Pane>
                <AnchorPane layoutX="36.0" layoutY="24.0" minHeight="0.0" minWidth="0.0" prefHeight="170.0"
                            prefWidth="160.0" styleClass="Pane_white" stylesheets="@UI_JavaFX.css">
                    <children>
                        <TextField fx:id="width" layoutX="63.0" layoutY="67.0" prefHeight="31.0" prefWidth="90.0"
                                   promptText="Width" text="1000">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </TextField>
                        <Label layoutX="14.0" layoutY="69.0" text="宽度">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label layoutX="14.0" layoutY="126.0" text="高度">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <CheckBox fx:id="isFullScreen" layoutX="42.0" layoutY="11.0" mnemonicParsing="false"
                                  onAction="#isFull" text="全屏">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </CheckBox>
                        <TextField fx:id="height" layoutX="63.0" layoutY="123.0" prefHeight="31.0" prefWidth="90.0"
                                   promptText="Height" text="700">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </TextField>
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="417.0" layoutY="24.0" minHeight="0.0" minWidth="0.0" prefHeight="170.0"
                            prefWidth="231.0" styleClass="Pane_white" stylesheets="@UI_JavaFX.css">
                    <children>
                        <TextField fx:id="address" layoutX="63.0" layoutY="67.0" prefHeight="33.0" prefWidth="145.0"
                                   promptText="Address">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </TextField>
                        <Label layoutX="14.0" layoutY="69.0" text="地址">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label layoutX="14.0" layoutY="126.0" text="端口">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <CheckBox fx:id="isThroughServer" layoutX="42.0" layoutY="11.0" mnemonicParsing="false"
                                  onAction="#isThroughServer" text="服务器直达">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </CheckBox>
                        <TextField fx:id="port" layoutX="63.0" layoutY="123.0" prefHeight="33.0" prefWidth="68.0"
                                   promptText="Port">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </TextField>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
        <TextArea fx:id="logText" editable="false" layoutX="18.0" layoutY="543.0" opacity="0.9" prefHeight="262.0"
                  prefWidth="703.0" style="overflow-y: visible;" styleClass="text-area" stylesheets="@bootstrap3.css"
                  wrapText="true"/>
        <Hyperlink layoutX="307.0" layoutY="812.0" onAction="#showAbout" text="关于">
            <font>
                <Font name="Calibri" size="19.0"/>
            </font>
        </Hyperlink>
        <Label fx:id="versionLabel" layoutX="14.0" layoutY="815.0" prefHeight="25.0" prefWidth="285.0" text="MQ启动器">
            <font>
                <Font name="DengXian Bold" size="21.0"/>
            </font>
        </Label>
        <Pane fx:id="infoPane" layoutX="728.0" layoutY="545.0" prefHeight="262.0" prefWidth="255.0"
              style="-fx-background-radius: 10px;">
            <children>
                <Label fx:id="playerNameLabel" alignment="CENTER" layoutX="14.0" layoutY="148.0" prefHeight="24.0"
                       prefWidth="80.0" text="玩家名：" textAlignment="CENTER">
                    <font>
                        <Font name="DengXian Regular" size="20.0"/>
                    </font>
                </Label>
                <TextField fx:id="playerName" layoutX="91.0" layoutY="139.0" prefHeight="42.0" prefWidth="145.0"
                           promptText="Player name">
                    <font>
                        <Font size="19.0"/>
                    </font>
                </TextField>
            <AnchorPane layoutX="10.0" layoutY="14.0" opacity="0.9" prefHeight="100.0" prefWidth="235.0" style="-fx-background-color: rgb(179,229,252); -fx-background-radius: 20px;">
               <children>
                   <ImageView fx:id="versionImage" fitHeight="60.0" fitWidth="60.0" layoutX="15.0" layoutY="20.0"
                              pickOnBounds="true" preserveRatio="true">
                       <image>
                           <Image url="@imgs/iron_sword.png"/>
                       </image>
                   </ImageView>
                   <Label fx:id="gameVersion" layoutX="85.0" layoutY="14.0" text="未知">
                       <font>
                           <Font name="DengXian Bold" size="24.0"/>
                       </font>
                   </Label>
                   <Circle fx:id="unfoldButton" fill="#737b83" layoutX="209.0" layoutY="46.0" radius="12.0"
                           stroke="TRANSPARENT" strokeType="INSIDE"/>
                   <Hyperlink fx:id="gamePathLink" layoutX="75.0" layoutY="58.0" maxHeight="25.0" maxWidth="105.0"
                              prefHeight="25.0" prefWidth="105.0" text="未知" textFill="#725c5c"
                              textOverrun="WORD_ELLIPSIS">
                       <font>
                           <Font name="Arial Rounded MT Bold" size="15.0"/>
                       </font>
                   </Hyperlink>
               </children>
            </AnchorPane>
                <Button fx:id="launchButton" layoutX="142.0" layoutY="220.0" mnemonicParsing="false"
                        onAction="#launchGame" prefHeight="48.0" prefWidth="103.0" styleClass="success"
                        stylesheets="@bootstrap3.css" text="启动" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="DengXian Regular" size="19.0"/>
                    </font>
                </Button>
            </children>
        </Pane>
        <ListView fx:id="versionView" layoutX="14.0" layoutY="93.0" prefHeight="424.0" prefWidth="268.0"/>
        <ToolBar layoutX="25.0" layoutY="14.0" prefHeight="50.0" prefWidth="955.0"
                 style="-fx-background-radius: 5px; -fx-background-color: rgb(244,244,244);">
            <items>
                <Button fx:id="rootDirChooseButton" defaultButton="true" mnemonicParsing="false"
                        onAction="#chooseRootDir" prefHeight="32.0" prefWidth="103.0" styleClass="primary"
                        stylesheets="@bootstrap3.css" text="导入游戏">
                    <font>
                        <Font name="DengXian Regular" size="19.0"/>
                    </font>
                </Button>
                <Button fx:id="downloadButton" defaultButton="true" mnemonicParsing="false" onAction="#downloadGame"
                        prefHeight="32.0" prefWidth="103.0" styleClass="action-btn" stylesheets="@bootstrap3.css"
                        text="下载游戏">
                    <font>
                        <Font name="DengXian Regular" size="19.0"/>
                    </font>
                </Button>
                <Separator orientation="VERTICAL" prefHeight="40.0"/>
                <Button fx:id="packButton" mnemonicParsing="false" onAction="#_pack" styleClass="action-btn"
                        stylesheets="@bootstrap3.css" text="打包整合包"/>
                <Button fx:id="unpackButton" mnemonicParsing="false" onAction="#_unpack" styleClass="action-btn"
                        stylesheets="@bootstrap3.css" text="导入整合包"/>
            </items>
        </ToolBar>
    </children>
</AnchorPane>
